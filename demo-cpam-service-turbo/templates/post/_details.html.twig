<turbo-frame id="post-details">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center mb-3">{{ post.title }}</h2>
            <p class="card-text">{{ post.content }}</p>
            <p class="text-muted">
                <strong>Created At:</strong> {{ post.createdAt|date("Y-m-d H:i") }}
            </p>
            <div class="text-center mt-4">
                <a href="{{ path('post_index') }}" class="btn btn-secondary">Back to Posts</a>
            </div>
        </div>
    </div>
</turbo-frame>
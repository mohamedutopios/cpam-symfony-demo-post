<turbo-frame id="posts">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Content</th>
            <th scope="col">CreatedAt</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.category.name }}</td>
                <td>{{ post.content|length > 30 ? post.content[:30] ~ '...' : post.content }}</td>
                <td>{{ post.createdAt|date("Y-m-d H:i") }}</td>
                <td>
                    <a href="{{ path('post_show', {id: post.id}) }}"
                       data-turbo-frame="post-details"
                       class="btn btn-info btn-sm">View</a>
                    <a href="{{ path('post_edit', {id: post.id}) }}"
                       data-turbo-frame="post-form"
                       class="btn btn-warning btn-sm">Edit</a>
                    <form method="post" action="{{ path('post_delete', {id: post.id}) }}" style="display:inline;" data-turbo-frame="posts">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</turbo-frame>